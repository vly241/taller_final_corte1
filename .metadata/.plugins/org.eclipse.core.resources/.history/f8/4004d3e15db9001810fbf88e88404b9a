package cinema;

public class usuario {
	usuario l = new usuario();
	Nodo primero;
	Nodo ultimo;
	
	public usuario() {
		primero = null;
		ultimo = null;
	}
	
	public void ingresarNodo(int dato) {
		Nodo nNuevo = new Nodo();
		nNuevo.dato = dato;
		
		if(primero == null) {
			primero = nNuevo;
			primero.sig = null;
			ultimo = primero;
			
		}else {
			ultimo.sig = nNuevo;
			nNuevo.sig = null;
			ultimo = nNuevo;
		}
	}
	
	public void listar_u() {
      System.out.println("listar usuarios \n\n");
		
		Nodo actual = new Nodo();
		actual = primero;
		while(actual != null) {
			System.out.println(actual.dato);
			actual = actual.sig;
		}
	}
	public void usuario1() {
		l.usuario1();
		
		}
	
	public void usuario2() {
		System.out.println("crear \n\n");

		
		l.ingresarNodo(23);
		l.ingresarNodo(20);
		l.ingresarNodo(27);
		l.ingresarNodo(2);
		
		
		
	}
    public void usuario3() {
    	System.out.println("editar \n\n");
	}
    public void usuario4() {
    	System.out.println("eliminar \n\n");
}
    public void usuario5() {
    	System.out.println("return menu \n\n");
    	menu m = new menu();
    	m.menu1();
}
	
	
}
