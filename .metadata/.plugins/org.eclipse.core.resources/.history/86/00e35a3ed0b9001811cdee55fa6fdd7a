package cinema;
import java.util.*;
public class usuario {
	
        private Scanner teclado;
        private String nombre;
        private int id;
        
        
        public void  crear() {
        	teclado = new Scanner(System.in);
        	System.out.println("ingrese el nombre del usuario: ");
        	nombre=teclado.next();
        	System.out.println("ingrese la identificacion usuario:  ");
        	id=teclado.nextInt();
        }
	
	    public void imprimir() {
	    	System.out.println("nombre usuario : "+nombre);
	    	System.out.println("identificacion usuario: "+id);
	    }
	
	

	
	public void usuario1() {
		int opc;
		System.out.println("MENU USUARIO \n\n");
		System.out.println("ingrese el numero segun lo siguiente:\n");
		
		
		System.out.println("1). listar usuarios.");
		System.out.println("2). crear usuario");
		System.out.println("3).editar usuario");
		System.out.println("4). eliminar usuario.");
		System.out.println("5). menu principal\n");
		Scanner sc = new Scanner(System.in);
		opc = sc.nextInt();
		
		usuario u = new usuario();
	
		switch(opc) {
		
		case 1:
			u.imprimir();
			
			break;
			
		case 2:
			
		    u.crear();
		    u.usuario1();
			
			
			break;
			
		case 3:
		
		
			break;
			
		case 4:
		
		
			break;
		case 5:
			
			
			break;
			
		
			
		default:
			break;
			
		}
		sc.close();
		}
}
