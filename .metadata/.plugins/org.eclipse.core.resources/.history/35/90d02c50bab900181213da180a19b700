package cinema;
import java.util.*;
public class usuario {
	
	
	Nodo primero;
	Nodo ultimo;
	
	public usuario() {
		primero = null;
		ultimo = null;
	}
	
	public void ingresarNodo(int dato) {
		Nodo nNuevo = new Nodo();
		nNuevo.dato = dato;
		
		if(primero == null) {
			primero = nNuevo;
			primero.sig = null;
			ultimo = primero;
			
		}else {
			ultimo.sig = nNuevo;
			nNuevo.sig = null;
			ultimo = nNuevo;
		}
		menu m = new menu();
		m.menu1();
	}
	
	public void listar_u() {
		System.out.println("listar usuarios \n\n");
		
		Nodo actual = new Nodo();
		actual = primero;
		while(actual != null) {
			System.out.println(actual.dato);
			actual = actual.sig;
		}
	}
	public void usuario1() {
		int opc;
		System.out.println("MENU USUARIO \n\n");
		System.out.println("ingrese el numero segun lo siguiente:\n");
		
		
		System.out.println("1). listar usuarios.");
		System.out.println("2). crear usuario");
		System.out.println("3).editar usuario");
		System.out.println("4). eliminar usuario.");
		System.out.println("5). menu principal\n");
		Scanner sc = new Scanner(System.in);
		opc = sc.nextInt();
		
		usuario u1 = new usuario();
	
		switch(opc) {
		
		case 1:
			u1.ingresarNodo(34);
			u1.ingresarNodo(3);
			u1.ingresarNodo(4);
			u1.ingresarNodo(1);
		
			
			break;
			
		case 2:
			
			
			u1.listar_u();
			break;
			
		case 3:
		
		
			break;
			
		case 4:
		
		
			break;
		case 5:
			
			
			break;
			
		
			
		default:
			break;
			
		}
		sc.close();
		}
	
	
	
	
}
